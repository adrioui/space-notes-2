# Spaces & Group Chat - Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
# Get the connection string from your Supabase project settings -> Database
DATABASE_URL="postgresql://username:password@localhost:5432/database"
SUPABASE_DATABASE_URL="postgresql://username:password@localhost:5432/database"

# Supabase Configuration  
# Get these from your Supabase project settings -> API
SUPABASE_URL="https://your-project-id.supabase.co"
SUPABASE_ANON_KEY="your-supabase-anon-key"

# Session Security
# Generate a secure random string for session encryption
SESSION_SECRET="your-super-secret-session-key-change-this-in-production"

# Email Configuration (for OTP authentication)
# Configure your email provider credentials (Gmail, Outlook, etc.)
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-specific-password"

# SMS Configuration (for OTP authentication via Twilio)
# Get these from your Twilio Console (https://console.twilio.com)
TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Environment
NODE_ENV="development"